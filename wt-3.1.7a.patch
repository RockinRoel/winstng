   TARGET_LINK_LIBRARIES(${name} ${EXAMPLES_CONNECTOR})
+  INSTALL( TARGETS ${name} DESTINATION ${EXAMPLES_DESTINATION}/${${name}_SUBDIR} )
+  INSTALL( DIRECTORY ${name_SOURCE_DIR} DESTINATION ${EXAMPLES_DESTINATION} )
